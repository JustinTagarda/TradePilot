{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Security": {
    "Hmac": {
      "AllowedClockSkewSeconds": 300,
      "SharedSecret": "",
      "SourceSecrets": {
        "demo-source-01": "replace-with-strong-secret"
      }
    }
  },
  "Persistence": {
    "Enabled": true,
    "ConnectionString": "Data Source=tradepilot.db",
    "RetentionDays": 30,
    "DefaultHistoryTake": 200,
    "MaxHistoryTake": 1000,
    "RetentionCleanupIntervalWrites": 50
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5288",
      "https://localhost:7206"
    ]
  },
  "AllowedHosts": "*"
}
